# 应用配置
APP_NAME=CN PII Anonymization
APP_VERSION=1.0.0
DEBUG=false

# API 配置
API_HOST=127.0.0.1
API_PORT=8000

# 识别器置信度阈值配置
# 全局默认阈值
SCORE_THRESHOLD_DEFAULT=0.35
# 姓名识别器阈值（IE模型，置信度通常0.3-0.6）
SCORE_THRESHOLD_NAME=0.25
# 地址识别器阈值（IE模型，置信度通常0.3-0.6）
SCORE_THRESHOLD_ADDRESS=0.25
# 手机号识别器阈值
SCORE_THRESHOLD_PHONE=0.50
# 身份证识别器阈值
SCORE_THRESHOLD_ID_CARD=0.50
# 银行卡识别器阈值
SCORE_THRESHOLD_BANK_CARD=0.50
# 护照识别器阈值
SCORE_THRESHOLD_PASSPORT=0.50
# 邮箱识别器阈值
SCORE_THRESHOLD_EMAIL=0.50

# 姓名识别器自定义列表配置
# 允许通过的姓名列表（不需要被脱敏），使用逗号分隔
# 示例：NAME_ALLOW_LIST=张三,李四,王五
NAME_ALLOW_LIST=
# 必须被脱敏的姓名列表（无论IE是否识别），使用逗号分隔
# 示例：NAME_DENY_LIST=赵六,钱七
NAME_DENY_LIST=
